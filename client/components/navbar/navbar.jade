.navbar.navbar-default.navbar-fixed-top(ng-controller='NavbarCtrl')
  .container
    .navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only {{ 'TOGGLE_NAV' | translate }}
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref='main') 
        img(src="assets/images/logo-small.png", height="40", alt="{{ 'APP_TITLE' | translate }}")

    #navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ui-sref-active="active")
          a(ui-sref='main') {{ 'NAV_RESULT_LABEL' | translate }}
          
      ul.nav.navbar-nav.navbar-right  
        li(ui-sref-active="active")
          a(ui-sref='pages({ slug: "about" })') {{ 'NAV_ABOUT_LABEL' | translate }}    
        li(uib-dropdown)
          a(uib-dropdown-toggle)
            | {{ 'NAV_LANGUAGE_LABEL' | translate }}
            span.caret
          ul(uib-dropdown-menu)
            li(ng-class="{ active: use() === 'en' }")
              a(ng-click="use('en')") English
            li(ng-class="{ active: use() === 'fr' }")
              a(ng-click="use('fr')") Français
            li(ng-class="{ active: use() === 'de' }")
              a(ng-click="use('de')") Deutsch
          
