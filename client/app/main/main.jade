                li
                  img.img-circle.img-thumbnail(src="//placehold.it/50x50/FFDF54/000")          
                li
                  img.img-circle.img-thumbnail(src="//placehold.it/50x50/FFDF54/000")
          
  .main__findings
    .container
      h2 {{ 'HOMEPAGE_FINDINGS_TITLE' | translate }}
      p.lead  {{ 'HOMEPAGE_FINDINGS_CONTENT' | translate }}

