.main(ui-view)
  .main__homepage(screen-height)
    .main__homepage__panel
      .row              
        .col-sm-6
          h1 {{ 'APP_TITLE' | translate }}
          .lead  {{ 'HOMEPAGE_DESCRIPTION' | translate }}
          
        .col-sm-6        
          .panel
            .panel-body
              h3 {{ 'HOMEPAGE_ADDR_TITLE' | translate }}
              p {{ 'HOMEPAGE_ADDR_DESCRIPTION' | translate }}
              form(ng-submit)
                div.input-group
                  input.form-control(type="text", placeholder="Ex: 12 promenade des anglais Nice")
                  span.input-group-btn
                    button.btn.btn-default(type="button") Validate
                    
